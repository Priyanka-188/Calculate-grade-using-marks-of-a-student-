m1 = int(input("Enter marks of Maths : "))
m2 = int(input("Enter marks of Physics : "))
m3 = int(input("Enter marks of Chemistry : "))

# First way
average = (m1+m2+m3)/3
if ( m1>=33 and m2>=33 and m3>=33 and average>=40):
    print("Congratulatrions..You are pass !","😊")
else:
    print("You are fail ..Better try next time","👍")

# alternative way
if(m1 <33 or m2<33 or m3 <33):
    print("You are fail")
elif (m1+m2+m3)/31 <40:
    print("You are fail as total percentage is less than 40")
else :
    print("Congrats ... You are passed 🎉")
